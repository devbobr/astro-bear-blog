---
type Props = {
	width?: number;
	height?: number;
	v: string;
	title?: string;
	start?: number;
};

const { width, height, v, start, title } = Astro.props;
---

<div class="flex justify-center py-8 -mx-6 md:mx-0">
	<iframe
		width={width || 560}
		height={height || 315}
		src={`https://www.youtube-nocookie.com/embed/${v}?start=${start || 0}`}
		title={title || "YouTube video player"}
		allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
		allowfullscreen
	>
	</iframe>
</div>
